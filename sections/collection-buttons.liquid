<style>
    @media only screen and (max-width: 768px) {
    .collection-button-main {
        flex-wrap: wrap;
        margin: 0 auto;
        justify-content: center !important;
    }
    .collection-buttons {
        margin: 10px !important; 
    }
}

    .coll-heading {
        margin-left: 30px;
        text-transform: capitalize;
    }
    .btn-url{
        display:block;
        padding: 10px 10px;
        border-radius: 8px;
        text-align: center;
    } 
    .collection-buttons {
        width: Calc(33% + 20px);
        margin: 10px 30px;
    }
    .collection-button-main {
        display: flex;
        justify-content: space-between;
    }
    .collection-buttons p {
        margin: 0;
    }
</style>
<div class="collection-custom-buttons">
<div class="col-btn-head">
    <div class="coll-heading">
        {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
        {% endif %}
    </div>
</div>

<div class="collection-button-main">
    {%- for block in section.blocks -%}
        {% if block.settings.collection !=  blank %}
    <div class="collection-buttons">
        <a href="{{ block.settings.collection }}" style="color:{{ block.settings.color }}; border:1px solid {{ block.settings.border-color }};" class="btn-url">
            <p class="btn-text">{{ block.settings.text }}</p>
        </a>
        </div>
    {% endif %}
    {% endfor %}
    </div>
</div>    

{% schema %}
{
    "name": "Collection Buttons",
    "class": "collection-buttons-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
        {
          "type": "collection",
          "name": "Column",
          "settings": [
            {
              "type": "collection",
              "id": "collection",
              "label": "Collection"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Collection title"
            },
            {
                "type": "color",
                "id": "color",
                "label": "Text Color",
                "default": "#000"
            },
            {
                "type": "color",
                "id": "border-color",
                "label": "Border Color",
                "default": "#000"
            }
        ]
    }
],
"presets": [
    {
      "name": "Collection Buttons",
      "category": "Text",
      "blocks": [
        {
          "type": "collection"
        }
      ]
    }
]
}

{% endschema %}